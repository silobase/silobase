{
	"name": "silobase",
	"version": "2.0.1",
	"description": "Open-source backend engine that exposes SQL databases as REST APIs. Supabase for enterprise.",
	"license": "Apache-2.0",
	"licenses": [
		{
			"type": "Apache-2.0",
			"url": "https://github.com/silobase/silobase/blob/main/LICENSE.md"
		}
	],
	"type": "module",
	"bin": {
		"silobase": "bin/silobase.js"
	},
	"files": [
		"dist",
		"bin"
	],
	"scripts": {
		"build": "rm -rf dist && tsc -p tsconfig.json",
		"start": "node dist/server.js",
		"predev": "npx --yes tsx --version || npm install -D tsx",
		"dev": "tsx watch ./src/server.ts",
		"serve": "npm run build && npm start",
		"prepublishOnly": "npm run build && mv README.md README.github.md && cp README.npm.md README.md",
		"postpublish": "mv README.github.md README.md",
		"test": "vitest"
	},
	"dependencies": {
		"@fastify/cors": "^11.0.1",
		"better-sqlite3": "^12.4.1",
		"dotenv": "^16.5.0",
		"fastify": "^5.4.0",
		"fastify-plugin": "^5.0.1",
		"knex": "^3.1.0",
		"mssql": "^11.0.1",
		"mysql": "^2.18.1",
		"pg": "^8.16.1"
	},
	"devDependencies": {
		"@types/node": "^24.0.3",
		"sqlite3": "^5.1.7",
		"supertest": "^7.1.4",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.6",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"author": "similoluwa adegoke <adegokesimi@gmail.com>"
}
